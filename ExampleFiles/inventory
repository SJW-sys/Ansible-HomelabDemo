# Version: 2026.02.05.001
# Ansible inventory

#### Global variables ####
[all:vars]
# Connection settings
ansible_user            = ansible               # default SSH user
ansible_ssh_private_key_file = ~/.ssh/id_rsa   # private key to use
ansible_port            = FIXME
# Common Python interpreter (useful for newer distros)
ansible_python_interpreter = /usr/bin/python3

#### Host groups ####
# Linux servers
[linux]
web01.example.com
db01.example.com

# Windows Servers
[windows]

# docker host servers
[docker]

# Testing space servers
[test]

# Prod servers
[prod]

#### Sub‑groups (inherit variables from parent groups) ####
# Database tier – separate vars
[dbtier:children]
linux

[dbtier:vars]
postgresql_version = 15
pg_data_dir         = /var/lib/postgresql/15/main

####  Host‑specific variables ####
# Override or add vars for a single host
[web01.example.com:vars]
ansible_host = 203.0.113.10          # IP address if DNS isn’t set
app_env     = production

[db01.example.com:vars]
ansible_host = 203.0.113.20
pg_hba_conf = /etc/postgresql/15/main/pg_hba.conf

